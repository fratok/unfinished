<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:gravity="center"
    android:padding="8dp"
    android:paddingBottom="16dp">


    <TextView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="!"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:background="@drawable/oval"
        android:padding="0dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallMargin"
        android:text="@string/errorDialogTitle1"
        android:textColor="@color/white"
        android:textSize="@dimen/errorDialogTitleTextSize"
        android:padding="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"/>

    <Button
        android:id="@+id/button_understood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonUnderstood"
        android:textSize="@dimen/errorDialogTitleTextSizeButton" />

</LinearLayout>